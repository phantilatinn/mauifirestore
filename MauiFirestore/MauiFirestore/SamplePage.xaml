<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFirestore.SamplePage"
             xmlns:local="clr-namespace:MauiFirestore.ViewModels"
             Title="SamplePage">
    <Grid RowDefinitions=".3*,.5*">
        <VerticalStackLayout Grid.Row="0"
                             Padding="20">
            <Label Text="Students"></Label>
            <Entry Placeholder="ID"
                   Text="{Binding CurrentSample.ID }"></Entry>
            <Entry Placeholder="Code"
                   Text="{Binding CurrentSample.Code }"></Entry>
            <Entry Placeholder="Name"
                   Text="{Binding CurrentSample.Name}"></Entry>
            <Grid ColumnDefinitions=".3*,.7*" ColumnSpacing="5" >
                <Button Grid.Column="0" Text="Reset"
                        Command="{Binding Reset }"></Button>
                <Button Grid.Column="1" Text="Add or update"
                        Command="{Binding AddOrUpdateCommand }"></Button>
            </Grid>
        </VerticalStackLayout>
        <ScrollView Padding="20"
                    Grid.Row="1">
            <CollectionView  ItemsSource="{Binding Samples}"
                             SelectionMode="Single"
                             SelectedItem="{Binding CurrentSample}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                             <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem 
                                        Text="Delete"
                                        BackgroundColor="Red"
                                        Command="{Binding 
                                        Source={ RelativeSource 
                                        AncestorType={x:Type local:SampleViewModel}}, 
                                        Path=DeleteCommand}">
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0"
                                       Text="{Binding Code}"></Label>
                                <Label Grid.Column="1"
                                       Text="{Binding Name}"></Label>

                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>